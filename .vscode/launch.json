{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(dev) Python: Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/bot.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "autoReload": {"enable": true, "include": [
                "**/*.py",
                "**/*.pyw"
            ]},
            "envFile": "${workspaceFolder}/.env.dev",
            "justMyCode": true
        }
    ]
}
